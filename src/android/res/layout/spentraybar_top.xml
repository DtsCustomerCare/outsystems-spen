<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/spen_traybar_layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

    <RelativeLayout
        android:id="@+id/spen_settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
        android:background="@color/topbar_background" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:background="@null"
            android:orientation="horizontal" >

            <ImageButton
                android:id="@+id/EraserBtn"
                android:layout_width="48dp"
                android:layout_height="32dp"
                android:layout_gravity="center"
                android:adjustViewBounds="true"                
                android:background="@color/white"
                android:contentDescription="@string/toolbar_eraser_btn"
                android:scaleType="fitCenter"
                android:src="@drawable/snote_toolbar_icon_eraser_normal"
                android:visibility="visible" 
                android:layout_margin="6dp"                 
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:layout_alignParentRight="true"
            android:orientation="horizontal" >

            <ImageButton
                android:id="@+id/cancelBtn"
                android:layout_width="48dp"
                android:layout_height="32dp"
                android:background="@color/white"
                android:layout_gravity="center"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:visibility="visible"
                android:src="@drawable/quick_popup_icon_cancel"
                android:contentDescription="@string/toolbar_cancel_btn" 
                android:layout_margin="6dp" 
                 />

            <ImageButton
                 android:id="@+id/saveBtn"
                 android:layout_width="56dp"
                 android:layout_height="32dp"
                 android:background="@color/white"
                 android:adjustViewBounds="true"
                 android:layout_gravity="center"
                 android:scaleType="fitCenter"
                 android:visibility="visible"
                 android:src="@drawable/quick_popup_icon_save_normal" 
                 android:contentDescription="@string/toolbar_done_btn" 
                 android:layout_margin="6dp" 
                 android:color="@color/green" />
         </LinearLayout>
    </RelativeLayout>

</RelativeLayout>